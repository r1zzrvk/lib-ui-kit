{
  "name": "lib-ui-kit",
  "description": "A UI kit for React applications, built with Mantine and Storybook.",
  "version": "0.0.2",
  "author": {
    "name": "r1zzrvk"
  },
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r1zzrvk/lib-ui-kit.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint . --fix",
    "type-check": "tsc",
    "coverage": "vitest run --coverage",
    "full-test": "vitest run --coverage && eslint . --fix && tsc",
    "chromatic": "chmod +x run-chromatic.sh && bash ./scripts/run-chromatic.sh",
    "bump:patch": "bash ./scripts/bump-version.sh patch",
    "bump:minor": "bash ./scripts/bump-version.sh minor",
    "bump:major": "bash ./scripts/bump-version.sh major",
    "bump": "bash ./scripts/bump-version.sh"
  },
  "keywords": [
    "react",
    "ui-kit",
    "storybook",
    "mantine",
    "vite",
    "typescript",
    "package",
    "library"
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "homepage": "",
  "private": false,
  "main": "src/index.ts",
  "dependencies": {
    "@mantine/core": "^7.17.3",
    "@mantine/hooks": "^7.17.3",
    "@mantine/notifications": "^7.17.4",
    "@phosphor-icons/react": "^2.1.7",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.4",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.86.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^8.57.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "chromatic": "^11.28.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^15.15.0",
    "playwright": "^1.51.1",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "storybook": "^8.6.12",
    "storybook-dark-mode": "^4.0.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
